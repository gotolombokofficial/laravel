{
    "name": "Laravel Codespace (PHP 8.3)",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        "ghcr.io/devcontainers/features/php:1": {
            "version": "8.3",
            "extensions": "gd,intl,zip,pdo_mysql,redis,bcmath,sqlite3,imagick,xml,mbstring,curl,opcache"
        },
        "ghcr.io/devcontainers/features/node:1": {
            "version": "lts"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "amiralizadeh9480.laravel-extra-intellisense",
                "bmewburn.vscode-intelephense",
                "onecentlin.laravel-blade",
                "mikestead.dotenv"
            ],
            "settings": {
                "php.validate.executablePath": "/usr/local/bin/php"
            }
        }
    },
    "postCreateCommand": "composer install && npm install && cp .env.example .env && php artisan key:generate",
    "remoteUser": "codespace"
}
